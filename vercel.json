{
  "functions": {
    "backend/api/*.go": {
      "runtime": "vercel-go@0.5.0",
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/api/:path*"
    }
  ],
  "builds": [
    {
      "src": "src/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/api/*.go",
      "use": "@vercel/go"
    }
  ]
}
